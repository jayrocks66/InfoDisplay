<Window x:Class="InfoDisplay.Config.GlobalSettingsConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoDisplay.Config"
        mc:Ignorable="d"
        Title="GlobalSettingsConfig" Height="300" Width="200">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding SlideAnimationsEnabled}">Animazioni slide</CheckBox>
            <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"> Font (famiglia):</TextBlock>
            <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Fonts}" SelectedItem="{Binding Settings.FontFamilyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                       <TextBlock Text="{Binding}"
                        FontFamily="{Binding}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Button x:Name="btn_Save" Grid.Row="5" Grid.Column="1" Click="btn_Save_Click">Salva</Button>
        </Grid>
 
        
    </Grid>
</Window>
